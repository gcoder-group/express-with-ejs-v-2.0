<style>
    
.users {
    position: relative;
    z-index: 8;
}
</style>
     <!-- inner pages start -->
      <div class="inner_all_pages loginbg">
            <div class="container">
               <div class="col-md-8">
   
   
<script src='https://www.google.com/recaptcha/api.js'></script>  
   
  <div class="users">
    <div class="">
           <div class="regiterouter">
       <div class="logIn">
          <h2>Register</h2>


        </div>
        <div class="loginouter">
                    <div class="login-form">
                      <% include ../partials/notifications %>
                    
                     <form method="post" action="" id="register_user">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>"> 
                      <div class="row">
                        <div class="col-md-12 col-sm-12 col-md-12">
                          <div class="form-group">
                            <div class="input-group">
                              <span class="input-group-addon"><i class="fas fa-user"></i></span>
                              <input name="name"  id="name" class="form-control person" placeholder="Full Name" type="text" > 
                            </div>            
                          </div>
                         </div>
                        
                      </div>
                              
                      <div class="row">
                        
                        <div class="col-md-12 col-sm-12 col-md-12">
                          <div class="form-group">
                            <div class="input-group">
                              <span class="input-group-addon"><i class="fas fa-envelope"></i></span>
                              <input id="email" placeholder="Email" class="form-control person" name="email" type="text"> 
                            </div>  
                          </div>
                        </div>
                      </div>
                               
                
                      <div class="row">
                        <div class="col-md-12 col-sm-12 col-md-12">
                          <div class="form-group">
                            <div class="input-group">
                              <span class="input-group-addon"><i class="fas fa-lock"></i></span>
                              <input  placeholder="Password" class="form-control person" name="password" id="password"  type="password">
                            </div>  
                          </div>
                         </div>
                        <div class="col-md-12 col-sm-12 col-md-12">
                          <div class="form-group">
                            <div class="input-group">
                              <span class="input-group-addon"><i class="fas fa-lock"></i></span>
                              <input  placeholder="Confirm Password" class="form-control person" name="c_password" id="c_password" type="password">
                            </div>  
                          </div>
                         </div>
                      </div>
                          
                          
                      <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                          <div class="form-group">
                            <div class="input-group">
                              <span class="input-group-addon"><i class="fas fa-reply-all"></i></span>
                              <input name="mobile" id="mobile"  placeholder="Contact No." class="form-control person" type="number">
                            </div>                          
                          </div>
                        </div>
                      
                      </div>
                      
                
                      <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                          <div class="form-group chkRegister">
                            <input name="terms" class="person" type="checkbox" required>
                            <label class="control-label"> I accept the <a target="_blank" href="<%= baseUrl %>terms-and-conditions.html">Terms and Conditions</a><span style="color:#FF0000;">*</span> </label>
                          </div>
                        </div>
                        
                        <div class="col-md-12 col-sm-12 col-xs-12">
                          <div class="form-group chkRegister">
                            <% if (captcha_at_login){ %>
                              <div class="g-recaptcha" data-sitekey="<%# RECAPTCHA_SITE_KEY %>" ></div>
                            <% } %>
                          </div>
                        </div>
                        
              
                        <div class="col-md-12 col-sm-12 col-xs-12">     
                          <div class="form-group btnRegister">
                            <button class="btn btnTheme " type="submit">Sign Up</button> 
                          </div>
                        </div>
                      </div>
                      
                      <div class="form-group links">  
                        <div class="register-btns">       
                          <div class="or-message"> <span>OR</span> </div>
                          <p>Already have an account? <a href="<%=  baseUrl %>auth/login">Sign in</a></p>
                        </div>
                      </div>
                            </form>
                    </div>    </div>
                            
                        </div>  </div>
                   
                   
                   
                   
                   </div>  </div>
                   
                
                            </div>
                         </div>
                      <!-- inner pages end -->
                   
                   
                   
                   
                  
                      
                      
<script>
$(document).ready(function() {
    $.validator.addMethod("lettersonly", function(value, element) {
     return this.optional(element) || /^[a-zA-Z\s]+$/i.test(value);
    }, "Letters only please");

    $("form#register_user").validate({
    rules: {
    name:{
        required:true,
        minlength:2,
        maxlength:32,
        lettersonly: true,
        
    },
        email: {
        required: true,
         email: true
      },
      password: {
        required: true,
        minlength: 6,
        maxlength:20
      },
      c_password: {
        required: true,
        minlength: 6,
        equalTo:'#password'
      },
      mobile: {
        required: true,
        number: true,
        minlength: 10,
        maxlength:14
      },
        "g-recaptcha-response": {
            required: !0,
            
        },
    },
     messages: {
        name:{
        required: "Please provide a name",
        minlength: "Your name must be at least 2 characters long",
        maxlength: "Your name must be less than 32 characters long",
        lettersonly: "Only letter is allowed!"
      },
        email: "Please enter a valid email address",
        password: {
        required: "Please provide a password",
        minlength: "Your password must be at least 6 characters long",
        maxlength: "Your password must be less than 20 characters long"
        },
        c_password : {
        required: "Please provide a password",
        minlength: "Your password must be at least 6 characters long",
        equalTo: "Please enter the same password as above"
        
        },
        mobile: {
            required: "Please provide a mobile number",
            minlength: "Your password must be at least 10 characters long",
            maxlength: "Your password must be less than 14 characters long"
        },
        "g-recaptcha-response": {
            required: "Please click on the reCAPTCHA box.",
        },
     },
     submitHandler: function(form) {
        form.submit();
        // if (grecaptcha.getResponse()) {
        //      form.submit();
        // } else {
        //     alert('Please confirm captcha to proceed')
        // }
    }
  });
});
</script>


