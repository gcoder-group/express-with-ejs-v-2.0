<!-- inner pages start -->
<div class="inner_all_pages loginbg">
	<div class="container">
		<div class="row">
			<div class="users">
				<div class="col-lg-12 col-lg-offset-12 col-md-12">
					<div class="logIn">
						<h2><span>FORGOT PASSWORD</span></h2>
						<% include ../partials/notifications %>
					</div>
					<div class="loginouter">

						<div class="col-lg-5  col-md-6 col-sm-6">
							<figure class="logiimg">
							<img src="<%= baseUrl %>images/loginimg.png">
						</div>
						<div class="col-lg-12  col-md-12 col-sm-12">
							<div class="login-form">
							   
								<form method="post" action="" >
									<input type="hidden" name="_csrf" value="<%= csrfToken %>">
									<div class="row">
										<div class="col-md-12">
											<div class="form-group required" aria-required="true">
												<div class="input-group">
													<span class="input-group-addon"><i class="fas fa-user"></i></span>
													<input name="email" class="form-control" placeholder="Email" id="email" required="required" aria-required="true" type="text">
												</div>
											</div>
										</div>
										<div class="col-md-12">
											<div class="form-group">
												<button class="btn btnTheme"  type="submit">Submit</button> 
											</div>
										</div>
										<div class="col-md-12 col-sm-12 col-xs-12">
											<div class="form-group links">
												Back to<a class="forgot-password" href="<%= baseUrl %>auth/login">Login?</a>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
<!-- inner pages end -->
